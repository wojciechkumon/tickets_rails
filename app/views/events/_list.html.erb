<section>
  <div class="container">
    <h2 class="text-center text-uppercase text-secondary mb-3">All events</h2>

    <div class="row">
      <table class="table table-hover events-table">
        <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Artist</th>
          <th scope="col">Location</th>
          <th scope="col">Lowest price</th>
          <th scope="col">Highest price</th>
          <th scope="col">Date</th>
          <th colspan="1"></th>
        </tr>
        </thead>
        <tbody>

        <% events.each do |event| %>
          <tr>
            <td><a href="/events/<%= event.id %>"><%= event.id %></a></td>
            <td><a href="/events/<%= event.id %>"><%= event.artist %></a></td>
            <td><a href="/events/<%= event.id %>"><%= event.location %></a></td>
            <td><a href="/events/<%= event.id %>"><%= event.price_low %></a></td>
            <td><a href="/events/<%= event.id %>"><%= event.price_high %></a></td>
            <td><a href="/events/<%= event.id %>"><%= event.event_date %></a></td>
            <td>
              <button onclick="$('#ticket_event_id').val('<%= event.id %>');"
                      class="btn btn-primary">Choose</button>
            </td>
          </tr>
        <% end %>

        </tbody>
      </table>
    </div>
  </div>
</section>
