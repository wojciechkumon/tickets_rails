<section>
  <div class="container">
    <h2 class="text-center text-uppercase text-secondary mb-3">
      <% if edit_form %>
        Edit ticket
      <% else %>
        New ticket
      <% end %>
    </h2>
    <div class="row">
      <div class="col-lg-6 offset-lg-3 col-md-12">
        <%= form_with(model: ticket, local: true) do |form| %>
          <% if ticket.errors.any? %>
            <div class="alert alert-danger" role="alert">
              <ul class="mb-0">
                <% ticket.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <% if show_event_id %>
            <div class="form-group">
              <%= form.label 'Event id' %>
              <%= form.text_field :event_id, :class => 'form-control', :placeholder => 'Enter event ID' %>
            </div>
          <% else %>
            <%= form.hidden_field :event_id %>
          <% end %>

          <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, :class => 'form-control', :placeholder => 'Enter your name' %>
          </div>

          <div class="form-group">
            <%= form.label :seat_id_seq %>
            <%= form.text_field :seat_id_seq, :class => 'form-control', :placeholder => 'Enter seat ID' %>
          </div>

          <div class="form-group">
            <%= form.label :address %>
            <%= form.text_field :address, :class => 'form-control', :placeholder => 'Enter your Address' %>
          </div>

          <div class="form-group">
            <%= form.label :price %>
            <%= form.text_field :price, :class => 'form-control', :placeholder => 'Enter ticket price' %>
          </div>

          <div class="form-group">
            <%= form.label 'Email' %>
            <%= form.text_field :email_address, :class => 'form-control', :placeholder => 'Enter your email',
                                :type => 'email' %>
          </div>

          <div class="form-group">
            <%= form.label :phone %>
            <%= form.text_field :phone, :class => 'form-control', :placeholder => 'Enter your phone number' %>
          </div>

          <%= form.submit :class => 'btn btn-primary' %>
          <% if edit_form %>
            <%= link_to 'Show ticket', @ticket, :class => 'btn btn-primary float-right' %>
          <% end %>
        <% end %>

      </div>
    </div>
  </div>
</section>
