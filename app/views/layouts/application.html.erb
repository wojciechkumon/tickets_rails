<!DOCTYPE html>
<html>
<head>
  <title>El Billete</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
  <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<% if notice %>
  <p class="alert alert-success mb-0"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger mb-0"><%= alert %></p>
<% end %>

<nav class="navbar navbar-expand-lg bg-secondary text-uppercase mb-5" id="mainNav">
  <div class="container">
    <a class="navbar-brand" href="/">El Billete</a>
    <button class="navbar-toggler navbar-toggler-right text-uppercase bg-primary text-white rounded"
            type="button" data-toggle="collapse"
            data-target="#navbarResponsive"
            aria-controls="navbarResponsive"
            aria-expanded="false"
            aria-label="Toggle navigation">
      Menu
      <i class="fas fa-bars"></i>
    </button>
    <div class="collapse navbar-collapse" id="navbarResponsive">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item mx-0 mx-lg-1">
          <a class="nav-link py-3 px-0 px-lg-3 rounded" href="/events">Events</a>
        </li>
        <li class="nav-item mx-0 mx-lg-1">
          <a class="nav-link py-3 px-0 px-lg-3 rounded" href="/tickets">Tickets</a>
        </li>

        <% if user_signed_in? %>
          <li class="nav-item mx-0 mx-lg-1">
            <%= link_to 'Edit profile', edit_user_registration_path,
                        :class => 'nav-link py-3 px-0 px-lg-3 rounded' %>
          </li>
          <li class="nav-item mx-0 mx-lg-1">
            <%= link_to "Logout", destroy_user_session_path, method: :delete,
                        :class => 'nav-link py-3 px-0 px-lg-3 rounded logout-link' %>
            <span class="user-email font-weight-normal text-white-50">(<%= current_user.email %>)</span>
          </li>
        <% else %>
          <li class="nav-item mx-0 mx-lg-1">
            <%= link_to "Sign up", new_user_registration_path,
                        :class => 'nav-link py-3 px-0 px-lg-3 rounded' %>
          </li>
          <li class="nav-item mx-0 mx-lg-1">
            <%= link_to "Login", new_user_session_path,
                        :class => 'nav-link py-3 px-0 px-lg-3 rounded' %>
          </li>
        <% end %>

      </ul>
    </div>
  </div>
</nav>

<%= yield %>

</body>
</html>
